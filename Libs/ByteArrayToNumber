#include <QtCore>

namespace ByteArrayToNumber
{
    int byteArrayToInt(const QByteArray& ba)
    {
        int res = 0;

        for (short i = 0; i < 4; ++i)
        {
            res = res << 8;
            res = res | unsigned char(ba[i]);
        }

        return res;
    }
    short byteArrayToShort(const QByteArray& ba)
    {
        short res = 0;

        for (short i = 0; i < 2; ++i)
        {
            res = res << 8;
            res = res | unsigned char(ba[i]);
        }

        return res;
    }
    long long byteArrayToLongLong(const QByteArray& ba)
    {
        long long res = 0;

        for (short i = 0; i < 8; ++i)
        {
            res = res << 8;
            res = res | unsigned char(ba[i]);
        }

        return res;
    }
    unsigned char byteArrayToByte(const QByteArray& ba)
    {
        unsigned char res = 0;

        res = res << 8;
        res = res | unsigned char(ba[0]);

        return res;
    }
}